#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>



/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOLUME_DOWN>;

            bindings = <
                &mo 1           &kp KP_SLASH    &kp KP_ASTERISK  &kp KP_MINUS
                &kp KP_N7       &kp KP_N8       &kp KP_N9       
                &kp KP_N4       &kp KP_N5       &kp KP_N6        &kp KP_PLUS
                &kp KP_N1       &kp KP_N2       &kp KP_N3        
                &kp KP_N0                       &kp KP_DOT       &kp KP_ENTER
                                                                 &kp C_MUTE
            >;
        
        };

        bt_layer {
            display-name = "Bluetooth";
            bindings = <
                &none           &none           &none            &bootloader
                &none           &none           &none            
                &none           &none           &bt BT_CLR       &none
                &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    
                &none                           &none            &none
                                                                 &none
            >;
        };
    };
};
